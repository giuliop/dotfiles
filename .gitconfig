[user]
    name = giulio
    email = giuliop@gmail.com
	signingkey = 3BCAD2CB70EDF387D682A2C0767CDA51BA8C0284
[core]
    editor = nvim
    excludesfile = ~/dev/dotfiles/.gitignore_global
[github]
    user = giuliop
[alias]
    aa = add --all
    amend = commit --amend
    ca = commit -a -m
    ck = checkout
    cm = commit -m
    dc = diff --cached
    last = log -1 HEAD
    mg = merge
    ps = push
    pl = pull
    st = status
    tg = tag -l -n1
[push]
    ;git push will only push current branch when tracking enabled
    default = tracking
[http]
    ; next line to use socks5 proxy behind firewall
    ;proxy = socks5://127.0.0.1:1080
[safe]
	directory = /etc/apache2
[init]
	defaultBranch = main
[tag]
	gpgSign = true
